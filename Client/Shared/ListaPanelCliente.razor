@inject NavigationManager navigate

<div class="list-group">
    @foreach (String opcion in this.opcionesPanel)
    {
        <a @onclick="@( ()=>this.navigate.NavigateTo($@"/Cliente/Panel/{opcion.Split(':')[1]}"))"
           class="list-group-item list-group-item-action">
            @opcion.Split(':')[0]
        </a>
    }
</div>

@code {
    private List<String> opcionesPanel = new List<String> 
    {
        "Inicio:PanelInicio",
        "Mi Perfil:MiPerfil",
        "Mis Datos de Envio:MisDatosEnvio",
        "Mis Compras:MisCompras",
        "Mis Gustos:MisGustos",
        "Mis Opiniones:MisOpiniones",
        "Mi Lista de Deseos:MiListaDeseos",
        "Volver a Agapea:Inicio",
        "Desconectarse:Logout"
    };
}
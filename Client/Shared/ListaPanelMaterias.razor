@inject NavigationManager _navigate@inject IRestService _rest<div class="list-group">    @foreach (Materia materia in listaMaterias)    {        <a @onclick="@(()=> this._navigate.NavigateTo("/Tienda/Libros/" + materia.MateriaId + "/" + materia.Nombre.Split(':')[1].ToString()))"           class="list-group-item list-group-item-action">            @materia.NombreMateria.Split(':')[0]        </a>     }</div>@code {     private List<Materia> listaMaterias = new List<Materia>();    protected override async Task OnInitializedAsync()    {        int materiaPadre = 0;        this.listaMaterias = await this._rest.DevolverMaterias(materiaPadre);    }}